{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "youtubetranscribe:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": [
        "docker-build"
      ],
      "dockerRun": {
        "ports": [
          {
            "containerPort": 8501,
            "hostPort": 8501
          }
        ],
        "volumes": [
          {
            "localPath": "${workspaceFolder}/data",
            "containerPath": "/app/data",
            "permissions": "rw"
          }
        ]
      },
      "python": {
        "args": [
          "run",
          "src/main.py"
        ],
        "module": "streamlit"
      }
    }
  ]
}